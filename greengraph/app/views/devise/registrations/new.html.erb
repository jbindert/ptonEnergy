<style>
    body {
        background: #DBF4AD !important;
	    font-family: 'Bree Serif', serif !important;
    }
    h2 {
	    font-family: 'Bree Serif', serif;
	}
</style>
<h2 style="position: absolute; left: 50%; top: 25%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%); border-bottom: 3px solid #568259; color: #568259; font-size: 500%; ">SIGN UP</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div style="position: absolute; left: 50%; top: 40%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%); color: #568259; font-size: 150%">
    Email:  <br><%= f.email_field :email, autofocus: true, placeholder: "Email", class: "email" %>
  </div>

  <div style="position: absolute; left: 50%; top: 52%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%); color: #568259; font-size: 150%">
    Password:  <br><%= f.password_field :password, autocomplete: "off", class: "email", placeholder: "Password" %>
  </div>

  <div  style="position: absolute; left: 50%; top: 64%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%); color: #568259; font-size: 150%" >
    Re-Enter Password:  <br><%= f.password_field :password_confirmation, autocomplete: "off", class: "email", placeholder: "Confirm Password" %>
  </div>

  <div style="position: absolute; left: 49.5%; top: 75%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%);">
    <%= f.submit "Sign up", class: "sign", name: "commit" %>
  </div>
<% end %>

<div style="position: absolute; left: 49.5%; top: 82%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%); ">
<%= render "devise/shared/links" %>
</div>
